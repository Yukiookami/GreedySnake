* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  font: bold 20px "Courier";
}
.game-mashin {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10px auto 0;
  border-radius: 20px;
  background-size: cover;
}
.game-mashin #main {
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  height: 420px;
  width: 360px;
  background-color: #b7d4a8;
  margin: 20px auto 0;
  border: 10px solid #000;
  border-radius: 10px;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.game-mashin #main #game-over {
  position: absolute;
  top: 36%;
  left: 22%;
  font-size: 36px;
  z-index: 99999;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.6);
}
.game-mashin #main #stage {
  position: relative;
  width: 304px;
  height: 304px;
  border: 2px solid #000;
}
.game-mashin #main #stage #snake div {
  position: absolute;
  width: 10px;
  height: 10px;
  background-color: #333;
  border: 1px solid #b7d4a8;
}
.game-mashin #main #stage #food {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  width: 10px;
  height: 10px;
  position: absolute;
  left: 40px;
  top: 100px;
}
.game-mashin #main #stage #food div {
  height: 4px;
  width: 4px;
  background-color: #000;
  transform: rotate(45deg);
}
.game-mashin #main #score-panel {
  display: flex;
  justify-content: space-between;
  width: 300px;
}
.game-mashin .phone-contron {
  position: relative;
  display: flex;
  width: 360px;
  height: 160px;
  background-size: cover;
  background-image: url('../asstes/img/game-back-contron.png');
}
.game-mashin .phone-contron .contor-button,
.game-mashin .phone-contron .game-reset {
  position: absolute;
  height: 35px;
  width: 35px;
}
.game-mashin .phone-contron .top-button {
  top: 34px;
  left: 57px;
}
.game-mashin .phone-contron .right-button {
  top: 69px;
  left: 92px;
}
.game-mashin .phone-contron .bottom-button {
  top: 104px;
  left: 57px;
}
.game-mashin .phone-contron .left-button {
  top: 69px;
  left: 22px;
}
.game-mashin .phone-contron .a-button {
  top: 57px;
  right: 18px;
}
.game-mashin .phone-contron .b-button {
  top: 79px;
  right: 87px;
}
