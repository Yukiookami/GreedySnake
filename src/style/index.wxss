* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  font: bold 20px "Courier";
}
#main {
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  height: 420px;
  width: 360px;
  background-color: #b7d4a8;
  margin: 100px auto;
  border: 10px solid #000;
  border-radius: 10px;
}
#main #game-over {
  position: absolute;
  top: 36%;
  left: 22%;
  font-size: 36px;
  z-index: 99999;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.6);
}
#main #stage {
  position: relative;
  width: 304px;
  height: 304px;
  border: 2px solid #000;
}
#main #stage #snake div {
  position: absolute;
  width: 10px;
  height: 10px;
  background-color: #333;
  border: 1px solid #b7d4a8;
}
#main #stage #food {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  width: 10px;
  height: 10px;
  position: absolute;
  left: 40px;
  top: 100px;
}
#main #stage #food div {
  height: 4px;
  width: 4px;
  background-color: #000;
  transform: rotate(45deg);
}
#main #score-panel {
  display: flex;
  justify-content: space-between;
  width: 300px;
}
